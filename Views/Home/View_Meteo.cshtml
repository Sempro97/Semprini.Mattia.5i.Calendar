@model Semprini.Mattia._5i.Calendar.JsonMeteo.Jsonmeteo
@{
    ViewBag.Title = "Meteo";

}

<fieldset>
    <legend>Meteo delle città </legend>
</fieldset>


<h3>Cerca un altra località</h3>
@using (Html.BeginForm("Cerca", "Home", FormMethod.Post))
{

    <div>
        <fieldset>
            <legend>Inserisci una località</legend>

            <div class="editor-field">

                @Html.TextBoxFor(u => u.City, new { placeholder = "Inserisci qui la città" })
                @Html.ValidationMessageFor(u => u.City)
                <input type="submit" class="btn btn-default" aria-label="Left Align" value="Ottieni meteo" />
            </div>

        </fieldset>
    </div>



<div class="container">
    <br />
    <div class="row">
        <div class="span5">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>
                            @Html.Label("Città", htmlAttributes: new { @class = "control-label col-md-2" })
                        </th>
                        <th>
                            @Html.Label("Descrizione",
htmlAttributes: new { @class = "control-label col-md-2" })
                        </th>
                        <th>
                            @Html.Label("Altitudine in piedi",
htmlAttributes: new { @class = "control-label col-md-2" })
                        </th>
                        <th>
                            @Html.Label("Latitudine",
htmlAttributes: new { @class = "control-label col-md-2" })
                        </th>
                        <th>
                            @Html.Label("Longitudine",
htmlAttributes: new { @class = "control-label col-md-2" })
                        </th>
                        <th>
                            @Html.Label("Temperatura in gradi",
htmlAttributes: new { @class = "control-label col-md-2" })
                        </th>
                        <th>
                            @Html.Label("Umidità relativa",
htmlAttributes: new { @class = "control-label col-md-2" })
                        </th>
                        <th>
                            @Html.Label("Velocità del vento in kph",
htmlAttributes: new { @class = "control-label col-md-2" })
                        </th>
                        <th>
                            @Html.Label("Immagine")
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <span class="label label-success">
                                @Html.Label(Model.current_observation.display_location.city)
                            </span>
                        </td>
                        <td>
                            @Html.Label((Model.current_observation.weather))
                        </td>
                        <td>
                            @Html.Label(Model.current_observation.observation_location.elevation)
                        </td>

                        <td>
                            @Html.Label(Model.current_observation.observation_location.latitude)
                        </td>
                        <td>
                            @Html.Label(Model.current_observation.observation_location.longitude)
                        </td>
                        <td>
                            @Html.Label(Convert.ToString(Model.current_observation.temp_c))
                        </td>
                        <td>
                            @Html.Label(Model.current_observation.relative_humidity)
                        </td>
                        <td>
                            @Html.Label(Convert.ToString(Model.current_observation.wind_kph))
                        </td>
                        <td>
                            <a href="@Model.current_observation.history_url" class="thumbnail">
                                <img src=@Model.current_observation.icon_url>
                            </a>
                        </td>
                    </tr>

                </tbody>

            </table>
        </div>
    </div>
</div>
}
