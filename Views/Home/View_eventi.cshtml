@model List<string>
@{
    ViewBag.Title = "Calendario - Mattia Semprini";
}

<h2>Eventi in Programma:</h2>
@using (Html.BeginForm("Calendario", "Home"))
{
    <input type="submit" class="btn btn-default" aria-label="Left Align" value="Aggiorna">

<div class="container">
    <br />
    <div class="row">
        <div class="span5">
            
            
                

            
            
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>Lista Eventi:</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                    <tr>
                        <td>
                            @x
                        </td>
                    </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
}

